<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context="com.example.android.arduinoprojects.MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="58dp"
                android:layout_weight="0.3"
                android:background="#E6EE9C"
                android:src="@drawable/arduino_logo"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="5dp"
                android:text="Banco de Dados de Projetos"
                android:background="#E6EE9C"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Bloco projeto1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:text="Projeto 1: Veiculo Aut么nomo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.3"
                    android:paddingLeft="10dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/projeto1"/>

                <Button
                    android:id="@+id/btn_projeto1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.7"
                    android:background="#E1F5FE"
                    android:onClick="verProjeto1"
                    android:text="Clique Aqui"/>
            </LinearLayout>

            <!-- Bloco Projeto2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:text="Projeto 2: Rob么 Quadripod"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.3"
                    android:paddingLeft="10dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/projeto2"/>

                <Button
                    android:id="@+id/btn_projeto2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.7"
                    android:background="#E1F5FE"
                    android:onClick="verProjeto2"
                    android:text="Clique Aqui"/>
            </LinearLayout>

            <!-- Bloco Projeto3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:text="Projeto 3: Garra Rob贸tica"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:background="#E1F5FE"
                android:src="@drawable/projeto3"/>

                <Button
                    android:id="@+id/btn_projeto3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.7"
                    android:background="#E1F5FE"
                    android:onClick="verProjeto3"
                    android:text="Clique Aqui"/>
            </LinearLayout>

            <!-- Bloco Projeto4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:text="Projeto 4: Rob么 Segue Linha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.3"
                    android:paddingLeft="10dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/projeto4"/>

                <Button
                    android:id="@+id/btn_projeto4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.7"
                    android:background="#E1F5FE"
                    android:onClick="verProjeto4"
                    android:text="Clique Aqui"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>


